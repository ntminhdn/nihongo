<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/s08_color_background_screen"
    android:orientation="vertical"
    android:padding="@dimen/s08_pre_lesson_category_padding">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/mBtnHiragana"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s08_pre_lesson_category_height_button"
        android:background="@drawable/s08_pre_lesson_button"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/s08_pre_lesson_category_button_padding"
        android:paddingRight="@dimen/s08_pre_lesson_category_button_padding"
        android:text="@string/common_app__category__pre_hiragana"
        android:textColor="@color/s08_color_button"
        android:textSize="@dimen/s08_pre_lesson_category_button_text_size" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/mBtnKatakana"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s08_pre_lesson_category_height_button"
        android:layout_marginTop="@dimen/s08_pre_lesson_category_padding"
        android:background="@drawable/s08_pre_lesson_button"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/s08_pre_lesson_category_button_padding"
        android:paddingRight="@dimen/s08_pre_lesson_category_button_padding"
        android:text="@string/common_app__category__pre_katakna"
        android:textColor="@color/s08_color_button"
        android:textSize="@dimen/s08_pre_lesson_category_button_text_size" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/mBtnNumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s08_pre_lesson_category_height_button"
        android:layout_marginTop="@dimen/s08_pre_lesson_category_padding"
        android:background="@drawable/s08_pre_lesson_button"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/s08_pre_lesson_category_button_padding"
        android:paddingRight="@dimen/s08_pre_lesson_category_button_padding"
        android:text="@string/common_app__category__pre_number"
        android:textColor="@color/s08_color_button"
        android:textSize="@dimen/s08_pre_lesson_category_button_text_size" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/mBtnCommonSentence"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s08_pre_lesson_category_height_button"
        android:layout_marginTop="@dimen/s08_pre_lesson_category_padding"
        android:background="@drawable/s08_pre_lesson_button"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/s08_pre_lesson_category_button_padding"
        android:paddingRight="@dimen/s08_pre_lesson_category_button_padding"
        android:text="@string/common_app__category__pre_common"
        android:textColor="@color/s08_color_button"
        android:textSize="@dimen/s08_pre_lesson_category_button_text_size" />
</LinearLayout>

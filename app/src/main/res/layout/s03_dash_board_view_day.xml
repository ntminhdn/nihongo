<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mTvDayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/s03_dashboard_color_text_day"
        android:textSize="@dimen/s03_dashboard_view_day_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mTvDayName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/s03_dashboard_view_day_margin"
        android:background="@drawable/s03_bg_circle_item"
        android:padding="1dp">

        <com.honkidenihongo.pre.gui.widget.PercentView
            android:id="@+id/mViewPercent"
            android:layout_width="@dimen/s03_dashboard_view_day_size"
            android:layout_height="@dimen/s03_dashboard_view_day_size" />
    </LinearLayout>

</RelativeLayout>

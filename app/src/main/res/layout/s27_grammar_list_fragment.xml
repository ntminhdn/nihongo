<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/s27_grammar_list_color_screen"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/mTvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/s27_grammar_list_color_screen"
        android:padding="@dimen/s27_grammar_list_screen_padding"
        android:textColor="@color/s27_grammar_list_color_text"
        android:textSize="@dimen/s27_grammar_list_text_size"
        tools:text="Grammar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />
</LinearLayout>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="buttonStyle">@style/MyButton</item>
        <!-- You should set typeface which you want to override with FontsConfig. -->
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTabBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="elevation">@dimen/tab_none_elevation</item>
    </style>

    <style name="AppFullScreenTheme" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Xóa thuộc tính viết hoa text của button AppCompat.-->
    <style name="MyButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Theme of toolbar-->
    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>
